//Programa que calcula a média
var nome = prompt ('Digite o seu nome:');
    alert('Olá ' + nome);
var nota1 = Number(prompt('Digite a primeira nota'));
var nota2 = Number(prompt('Digite a segunda nota'));
var nota3 = Number(prompt('Digite a terceira nota'));
var nota4 = Number(prompt('Digite a quarta nota'));
var media = (nota1 + nota2 + nota3 + nota4) / 4;
	alert("sua média é: " + media);
if (media < 4){
	alert("que pena " + nome + " você foi reprovado.");
}else if (media < 6){
	alert("Estude mais " + nome + " pois você ficou em recuperação;");
}else{
	alert("Parabéns!! " + nome + " Você foi aprovado.");

}
